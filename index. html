    <!-- simple interactive converter (javascript) -->
    <script>
        (function() {
            // fake exchange rates (base: TRY for simplicity)
            const rates = {
                USD: { buy: 18.75, sell: 18.95 },
                EUR: { buy: 20.15, sell: 20.40 },
                GBP: { buy: 23.80, sell: 24.10 },
                TRY: { buy: 1, sell: 1 }
            };

            const sendAmountInput = document.getElementById('sendAmount');
            const sendCurrencySelect = document.getElementById('sendCurrency');
            const receiveAmountInput = document.getElementById('receiveAmount');
            const receiveCurrencySelect = document.getElementById('receiveCurrency');
            const rateDisplay = document.getElementById('rateDisplay');

            function updateConversion() {
                let sendCurr = sendCurrencySelect.value;
                let receiveCurr = receiveCurrencySelect.value;
                let amount = parseFloat(sendAmountInput.value) || 0;

                // if both same, simple 1:1 but with buy/sell logic we treat as no conversion
                let rate;
                if (sendCurr === receiveCurr) {
                    rate = 1;
                } else {
                    // fake: convert via TRY base: sendCurr -> TRY (sell) then TRY -> receiveCurr (buy)
                    // simplified: get value of sendCurr in TRY (sell rate) and receiveCurr in TRY (buy rate)
                    let sendToTry = rates[sendCurr] ? rates[sendCurr].sell : 1;   // how many TRY per sendCurr (selling)
                    let tryToReceive = rates[receiveCurr] ? (1 / rates[receiveCurr].buy) : 1; // how many receive per 1 TRY (using buy)
                    rate = sendToTry * tryToReceive;
                }

                let receiveAmount = amount * rate;
                receiveAmountInput.value = receiveAmount.toFixed(2);

                // update rate display
                if (sendCurr === receiveCurr) {
                    rateDisplay.innerText = `1 ${sendCurr} = 1 ${receiveCurr}`;
                } else {
                    rateDisplay.innerText = `1 ${sendCurr} = ${rate.toFixed(4)} ${receiveCurr}`;
                }
            }

            sendAmountInput.addEventListener('input', updateConversion);
            sendCurrencySelect.addEventListener('change', updateConversion);
            receiveCurrencySelect.addEventListener('change', updateConversion);

            // initial update
            updateConversion();

            // exchange button click simulation
            document.getElementById('exchangeBtn').addEventListener('click', function() {
                alert('üîÅ This would start the exchange process. (Demo interaction)');
            });
        })();
    </script>
</body>
</html>