    <!-- dummy interactivity: buttons show alert -->
    <script>
        // just for demonstration ‚Äì play buttons show an alert
        document.querySelectorAll('.play-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.preventDefault();
                alert('üéÆ STONE CITY ‚Äì game would start in real environment (demo).');
            });
        });
        // also for other buttons
        document.querySelectorAll('.btn-glow').forEach(btn => {
            btn.addEventListener('click', (e) => {
                if (btn.classList.contains('btn-glow') && !btn.closest('.nav')) {
                    e.preventDefault();
                    alert('üîê Demo: this action is simulated.');
                }
            });
        });
    </script>
